BootStrap: library
From: ubuntu:20.04

%environment
PATH=/bioinf-tools/:/bioinf-tools/bioinf-scripts/python/:/bioinf-tools/bioinf-scripts/perl/:/bioinf-tools/canu-2.2/bin/:$PATH
LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH


%post
    apt-get update
    apt-get install -y software-properties-common
    apt-add-repository universe
    apt-get update

    apt-get install -y \
      artemis \
      bowtie2 \
      build-essential \
      cmake \
      curl \
      cython3 \
      git \
      libarchive-dev \
      liblzma-dev \
      libbz2-dev \
      libcurl4-openssl-dev \
      libhts-dev \
      libncurses5-dev \
      libncursesw5-dev \
      ncbi-blast+ \
      ncbi-blast+-legacy \
      openjdk-11-jre \
      python3 \
      python3-pip \
      python3-pysam \
      python3-setuptools \
      reapr \
      samtools \
      spades \
      wget \
      zlib1g-dev

    pip install h5py==2.10.0

    mkdir /bioinf-tools


    # ---------------------- assembly-stats -----------------------------------
    cd /bioinf-tools
    wget https://github.com/sanger-pathogens/assembly-stats/archive/v1.0.1-docker1.tar.gz
    tar xf v1.0.1-docker1.tar.gz
    rm v1.0.1-docker1.tar.gz
    cd assembly-stats-1.0.1-docker1/
    mkdir build
    cd build
    cmake ..
    make
    make install


    # --------------------------- bwa -----------------------------------------
    cd /bioinf-tools
    wget https://github.com/lh3/bwa/releases/download/v0.7.17/bwa-0.7.17.tar.bz2
    tar xf bwa-0.7.17.tar.bz2
    rm bwa-0.7.17.tar.bz2
    cd bwa-0.7.17/
    make
    cd ..
    cp -s bwa-0.7.17/bwa .


    # --------------------------- canu ----------------------------------------
    cd /bioinf-tools
    wget https://github.com/marbl/canu/releases/download/v2.2/canu-2.2.Linux-amd64.tar.xz
    tar xf canu-2.2.Linux-amd64.tar.xz
    rm canu-2.2.Linux-amd64.tar.xz


    # ------------------------- prodigal --------------------------------------
    cd /bioinf-tools
    wget -O prodigal https://github.com/hyattpd/Prodigal/releases/download/v2.6.3/prodigal.linux
    chmod 755 prodigal

    # Commented out because the repository no longer exists?!
    # ---------------------- pbh5tools ----------------------------------------
    #cd /bioinf-tools
    #git clone https://github.com/PacificBiosciences/pbh5tools.git
    #cd pbh5tools/
    #python setup.py install


    # ---------------------- pilon --------------------------------------------
    cd /bioinf-tools
    wget https://github.com/broadinstitute/pilon/releases/download/v1.24/pilon-1.24.jar


    # ---------------------- racon --------------------------------------------
    cd /bioinf-tools
    git clone --recursive https://github.com/lbcb-sci/racon.git racon
    cd racon
    mkdir build
    cd build
    cmake -DCMAKE_BUILD_TYPE=Release ..
    make
    make install

    # ---------------------- unicycler ----------------------------------------
    cd /bioinf-tools
    wget https://github.com/rrwick/Unicycler/archive/refs/tags/v0.5.0.tar.gz
    tar xf v0.5.0.tar.gz
    rm v0.5.0.tar.gz
    cd Unicycler-0.5.0/
    python3 setup.py install


    # ---------------------- mummer -------------------------------------------
    cd /bioinf-tools
    wget https://github.com/mummer4/mummer/releases/download/v4.0.0rc1/mummer-4.0.0rc1.tar.gz
    tar xf mummer-4.0.0rc1.tar.gz
    rm mummer-4.0.0rc1.tar.gz
    cd mummer-4.0.0rc1/
    ./configure
    make
    make install


    # ---------------------- python -------------------------------------------
    pip3 install circlator


%labels
    Version 0.2.1

